<%- include('header'); -%>

<div class="box" id="heading">
  <h1><%=listTitle%></h1>
</div>


<div class="box">

  <%newItem.forEach(function(item){ %>
  <form action="/delete" method="post">

    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p><%=item.name%></p>
    </div>
    <%  }); %>

  </form>

  <form class="items" action="/" method="post">
    <input type="text" name="inputItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="button" value=<%= listTitle %>>+</button>
  </form>

</div>
<%- include('footer'); -%>
